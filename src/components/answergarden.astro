---
let tags: string[] = [];

const response = await fetch("https://answergarden.ch/api/gettags/3133340");
const data = await response.text();
tags = data.split(",");
---

<p class="AGMobile">
  <strong
    ><a href="https://answergarden.ch/3133340"
      >Quel(s) objet(s) aimerais-je emprunter à L’Objethèque?</a
    ></strong
  >
</p>
<ul id="listeObjetsAG">
  {tags.map((tag, index) => <li>{tag}</li>)}
</ul>
<iframe
  id="AG"
  loading="lazy"
  src="https://answergarden.ch/embed/3133340"
  width="100%"
  height="500px"
  style="border: none;"
  title="AnswerGarden"
  allowtransparency="true"
>
</iframe>
<style>
  #AG {
    display: flex;
    margin: auto;
    width: 100%;
    max-width: 1000px;
    border-radius: 20px;
  }
  .AGMobile {
    display: none;
  }
  #listeObjetsAG {
    display: none;
    text-transform: uppercase;
    overflow-x: auto;
    gap: 1rem;
    padding: 1.5rem;
    margin-block: 1rem;
    border-radius: 10px;
    box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1) inset, -3px -17px 6px rgba(0, 0, 0, 0.1) inset;
  }

  #listeObjetsAG li {
    background-color: var(--secondary-color);
    color: var(--light-text-color);
    padding: 1em;
    border-radius: 20px;
    font-size: 0.95em;
    white-space: nowrap;
  }
  #listeObjetsAG li:last-child {
    display: none;
  }

  @media screen and (max-width: 816px) {
    #AG {
      display: none;
    }
    .AGMobile {
      display: block;
    }
    #listeObjetsAG {
      display: flex;
    }
  }
</style>
